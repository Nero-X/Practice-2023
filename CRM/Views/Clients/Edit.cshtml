@model CRM.Models.Client

<h2>Edit Client</h2>

<form asp-action="Edit">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Passport" class="control-label"></label>
        <input asp-for="Passport" class="form-control" />
        <span asp-validation-for="Passport" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Contacts" class="control-label"></label>
        <input asp-for="Contacts" class="form-control" />
        <span asp-validation-for="Contacts" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</form>
