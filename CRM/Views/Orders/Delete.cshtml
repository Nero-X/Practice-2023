@model CRM.Models.Order

<h1>Delete Order</h1>

<h3>Are you sure you want to delete this order?</h3>
<div>
    <h4>Order Number: @Html.DisplayFor(model => model.OrderNumber)</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Client.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Client.Name)
        </dd>

        <dt>
            Products
        </dt>

        <dd>
            <ul>
                @foreach (var productOrder in Model.OrderItems)
                {
                    <li>@productOrder.Product.Name (x @productOrder.Quantity)</li>
                }
            </ul>
        </dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a asp-action="Index">Back to List</a>
        </div>
    </form>
</div>
